<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:id="@+id/item_move_viewpigr2"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp">

        <!-- صورة الخلفية -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movie_image"
            android:src="@drawable/move"
            android:scaleType="centerCrop" />

        <!-- طبقة تغميق فوق الصورة -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E5000311"
            android:alpha="0.5" />

        <!-- نص اسم الفيلم ونجوم التقييم -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/spacing_standard"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
android:gravity="center"
       >

            <!-- اسم الفيلم -->
            <TextView
                android:id="@+id/movie_name"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="اسم الفيلم"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_large" />

            <!-- عنصر التقييم RatingBar -->
            <RatingBar
                android:id="@+id/movie_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
            android:stepSize="0.5"

            android:rating="4.22"
                android:progressTint="@color/gold"
                android:secondaryProgressTint="#B0B0B0"


                android:scaleX="0.4"
            android:scaleY="0.4"

       />

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>

